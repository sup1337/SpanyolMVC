@{
    ViewData["Title"] = "Setup Quiz";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow" style="max-width: 30rem;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Quiz Setup</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-controller="Quiz" asp-action="Index" method="get">
                <div class="mb-3">
                    <label for="numberOfQuestions" class="form-label">Number of Questions:</label>
                    <input type="number" name="numberOfQuestions" id="numberOfQuestions"
                           class="form-control" min="1" value="2" required/>
                </div>
                <div class="mb-3">
                    <label for="person" class="form-label">Person:</label>
                    <select name="person" id="person" class="form-control">
                        <option value="Random">Random</option> <!-- Új opció -->
                        <option value="1">I</option>
                        <option value="2">You</option>
                        <option value="3">He/She/It</option>
                        <option value="4">We</option>
                        <option value="5">You (plural)</option>
                        <option value="6">They</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="tense" class="form-label">Tense:</label>
                    <select name="tense" id="tense" class="form-control">
                        <option value="Present">Present</option>
                        <option value="Past">Past</option>
                        <option value="Future">Future</option>
                        <option value="Conditional">Conditional</option>
                        <option value="SubjunctivePresent">Subjunctive Present</option>
                        <option value="SubjunctiveImperfect">Subjunctive Impefect</option>
                        <option value="ImperativePositive">Imperative Positive</option>
                        <option value="ImperativeNegative">Imperative Negative</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="isIrregular" class="form-label">Include Irregular Verbs:</label>
                    <input type="checkbox" name="isIrregular" id="isIrregular" value="true" class="form-check-input"/>
                </div>
                <div class="mb-3">
                    <label for="isReflexive" class="form-label">Include Reflexive Verbs:</label>
                    <input type="checkbox" name="isReflexive" id="isReflexive" value="true" class="form-check-input"/>
                </div>
                <div class="mb-3">
                    <label for="difficulty" class="form-label">Difficulty Level:</label>
                    <select name="difficulty" id="difficulty" class="form-control">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-dark w-100">Start Quiz</button>
            </form>
        </div>
    </div>
</div>