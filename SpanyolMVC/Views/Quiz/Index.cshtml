@model System.Collections.Generic.List<SpanyolMVC.Models.ViewModels.QuizViewModel>


<div class="container mt-5">
    <h2 class="text-center mb-4">Spanish Quiz</h2>

    <form asp-action="Evaluate" method="post">
        <div class="row g-4">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Question @(i + 1)</h5>
                            <p><strong>Hungarian:</strong> @Model[i].Hungarian</p>
                            <p><strong>English:</strong> @Model[i].English</p>
                            <input type="hidden" name="[@i].Id" value="@Model[i].Id" />
                            <input type="hidden" name="[@i].Infinitive" value="@Model[i].Infinitive" />
                            <input type="hidden" name="[@i].Hungarian" value="@Model[i].Hungarian" />
                            <input type="hidden" name="[@i].English" value="@Model[i].English" />
                            <div class="mb-3">
                                <label for="UserAnswer_@i" class="form-label">Your Spanish Answer:</label>
                                <input type="text" class="form-control" id="UserAnswer_@i" name="[@i].UserAnswer" placeholder="Enter the Spanish word">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>