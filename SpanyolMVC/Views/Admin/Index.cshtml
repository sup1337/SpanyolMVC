@model System.Collections.Generic.List<SpanyolMVC.Models.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "User Roles";
}

<h1>User Roles</h1>

<!-- Keresési űrlap -->
<form asp-action="Search" method="get" class="form-inline mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by email..." />
        <div class="input-group-append">
            <button type="submit" class="btn btn-warning ms-3">Search</button>
        </div>
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
    <tr>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td>
                <a asp-action="Manage" asp-route-userId="@user.UserId" class="btn btn-primary">Manage Roles</a>
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="userId" value="@user.UserId" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>